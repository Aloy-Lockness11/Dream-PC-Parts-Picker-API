@page
@model Dream_PC_Parts_Picker_Web.Pages.Auth.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h2>Create account</h2>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-error">@Model.ErrorMessage</div>
}

<form method="post" class="form-vertical">
    <div class="form-row">
        <label asp-for="Input.Email"></label>
        <input asp-for="Input.Email" />
        <span asp-validation-for="Input.Email"></span>
    </div>

    <div class="form-row">
        <label asp-for="Input.DisplayName"></label>
        <input asp-for="Input.DisplayName" />
        <span asp-validation-for="Input.DisplayName"></span>
    </div>

    <div class="form-row">
        <label asp-for="Input.Password"></label>
        <input asp-for="Input.Password" type="password" />
        <span asp-validation-for="Input.Password"></span>
    </div>

    <button type="submit" class="btn-primary">Register</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}