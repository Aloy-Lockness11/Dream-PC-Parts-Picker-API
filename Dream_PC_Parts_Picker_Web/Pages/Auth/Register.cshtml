@page
@model Dream_PC_Parts_Picker_Web.Pages.Auth.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="row justify-content-center">
    <div class="col-12 col-md-7 col-lg-5">
        <div class="card panel-card shadow-lg">
            <div class="card-body p-4">
                <h2 class="mb-4 panel-title">Create account</h2>

                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="alert alert-danger">@Model.ErrorMessage</div>
                }

                <form method="post">
                    <input type="hidden" asp-for="ReturnUrl" />

                    <div class="mb-3">
                        <label asp-for="Input.Email" class="form-label"></label>
                        <input asp-for="Input.Email" class="form-control" autocomplete="email" />
                        <span asp-validation-for="Input.Email" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.DisplayName" class="form-label"></label>
                        <input asp-for="Input.DisplayName" class="form-control" autocomplete="nickname" />
                        <span asp-validation-for="Input.DisplayName" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Input.Password" class="form-label"></label>
                        <input asp-for="Input.Password" class="form-control" type="password" autocomplete="new-password" />
                        <span asp-validation-for="Input.Password" class="text-danger small"></span>
                    </div>

                    <button type="submit" class="btn btn-gold w-100 py-2">Register</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}